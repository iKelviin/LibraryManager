<div class="card explore-box card-animate h-100">
    <div class="explore-place-bid-img">
        <img
            class="card-img-top explore-img"
            src="@Book.ImageUrl"
            alt="@Book.Title"
            style="max-height: 300px; object-fit: contain;">
        <div class="bg-overlay"></div>
        <div class="place-bid-btn">
            <a href="@Book.Id/Book-details" class="btn btn-success">
                <i class="ri-eye-fill align-bottom me-1"></i> Ver Mais
            </a>
        </div>
    </div>

    <div class="card-body">
        <h5 class="mb-1"><a href="@Book.Id/Book-details">@Book.Title</a></h5>
        <p class="text-muted mb-0">@Book.Author</p>
    </div>
    <div class="card-footer border-top border-top-dashed">
        <div class="d-flex align-items-center">
            <div class="flex-grow-1 fs-14">
                <p class="text-muted mb-0">Status: 
                    @if (@Book.Status == "Available")
                    {
                        <a class="card-link link-success">Dispon√≠vel
                            <i
                                class="ri-checkbox-circle-fill align-middle ms-1 lh-1"></i></a>
                    }
                    else if (@Book.Status == "Archived")
                    {
                        <a class="card-link link-warning">Arquivado
                            <i
                                class="ri-information-fill align-middle ms-1 lh-1"></i></a>
                    }
                    else
                    {
                        <a class="card-link link-danger">Alugado
                            <i
                                class="ri-close-circle-fill align-middle ms-1 lh-1"></i></a>
                    }
                </p>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public BookViewModel Book { get; set; }
}